---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
export const prerender = false;
const canonical = "https://mapsformom.com/getIntinerary/[id]";
---

<Layout canonical={canonical}>
    <Header solid={true} />
    <section
        class="py-20 bg-linear-to-br from-secondary via-secondary/90 to-primary relative overflow-hidden"
    >
        <!-- First -->
        <div class="container mx-auto px-6 relative z-10 mt-16">
            <div class="max-w-6xl mx-auto">
                <header
                    class="relative text-5xl font-bold text-white text-center mb-16"
                >
                    Travel Itinerary Questionnaire
                    <span
                        class="absolute top-12 left-1/2 -translate-x-1/2 w-1/2 h-1 bg-primary"
                    ></span>
                </header>
            </div>

            <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-2xl p-8">
                <p class="text-gray-600 mb-8 text-center">
                    We'd love to learn more about your upcoming trip! Your
                    answers will help us curate a personalized itinerary filled
                    with experiences you'll love and moments that leave you
                    refreshed, inspired, and connected.
                </p>

                <form action="/contact/[id]" method="post">
                    <!-- Traveler Information Section -->
                    <div class="mb-8">
                        <h3
                            class="text-xl font-semibold text-primary/80 mb-4 border-b-2 border-primary pb-2"
                        >
                            Traveler Information
                        </h3>
                        <div class="grid md:grid-cols-2 gap-6">
                            <!-- Name -->
                            <div>
                                <label
                                    for="name"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Name*
                                </label>
                                <input
                                    type="text"
                                    placeholder="Your full name"
                                    id="name"
                                    name="name"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>

                            <!-- Email -->
                            <div>
                                <label
                                    for="email"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Email*
                                </label>
                                <input
                                    placeholder="example@example.com"
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                />
                            </div>

                            <!-- Phone -->
                            <div>
                                <label
                                    for="phone"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Phone number*
                                </label>
                                <input
                                    type="tel"
                                    placeholder="(123) 456-7890"
                                    id="phone"
                                    name="phone"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                />
                            </div>

                            <!-- Number of Travelers -->
                            <div>
                                <label
                                    for="travelers"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Number of travelers and ages*
                                </label>
                                <input
                                    type="text"
                                    id="travelers"
                                    name="travelers"
                                    placeholder="e.g., 2 adults, 1 child (5 years)"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                />
                            </div>
                        </div>
                    </div>

                    <!-- Trip Basics Section -->
                    <div class="mb-8">
                        <h3
                            class="text-xl font-semibold text-primary/80 mb-4 border-b-2 border-primary pb-2"
                        >
                            Trip Basics
                        </h3>
                        <div class="grid md:grid-cols-2 gap-6">
                            <!-- Travel Dates -->
                            <div>
                                <label
                                    for="travelDates"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Travel dates*
                                </label>
                                <input
                                    type="date"
                                    id="travelDates"
                                    name="travelDates"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                />
                            </div>

                            <!-- Primary Destination -->
                            <div>
                                <label
                                    for="destination"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Primary destination(s)*
                                </label>
                                <input
                                    type="text"
                                    id="destination"
                                    name="destination"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                    placeholder="e.g., Paris, France"
                                    required
                                />
                            </div>

                            <!-- Budget -->
                            <div>
                                <label
                                    for="budget"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Budget for this trip*
                                </label>
                                <input
                                    type="text"
                                    id="budget"
                                    name="budget"
                                    placeholder="e.g., $2000 - $3000"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                />
                            </div>

                            <!-- Accommodation -->
                            <div>
                                <label
                                    for="accommodation"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Accommodation preferences*
                                    <span class="text-sm text-gray-500"
                                        >e.g., Airbnb, Luxury Hotel, Boutique
                                        Hotel, Retreat Center, etc.</span
                                    >
                                </label>
                                <select
                                    id="accommodation"
                                    name="accommodation"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                >
                                    <option value="">Select an option</option>
                                    <option value="airbnb">Airbnb</option>
                                    <option value="luxury-hotel"
                                        >Luxury Hotel</option
                                    >
                                    <option value="boutique-hotel"
                                        >Boutique Hotel</option
                                    >
                                    <option value="retreat-center"
                                        >Retreat Center</option
                                    >
                                    <option value="resort">Resort</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>

                            <!-- Transportation -->
                            <div>
                                <label
                                    for="transportation"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Preferred mode of transportation*
                                    <span class="text-sm text-gray-500"
                                        >e.g., Airfare, Car Rental, Train, etc.</span
                                    >
                                </label>
                                <input
                                    type="text"
                                    id="transportation"
                                    name="transportation"
                                    placeholder="e.g., Airfare, Car Rental, Train"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                />
                            </div>
                        </div>
                    </div>

                    <!-- Trip Vision & Interests Section -->
                    <div class="mb-8">
                        <h3
                            class="text-xl font-semibold text-primary/80 mb-4 border-b-2 border-primary pb-2"
                        >
                            Trip Vision & Interests
                        </h3>
                        <div class="space-y-6">
                            <!-- Reason for Travel -->
                            <div>
                                <label
                                    for="reason"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Reason for your trip*
                                    <span class="text-sm text-gray-500"
                                        >e.g., Couples Trip, Family Vacation,
                                        Girls' Trip, Mommy Getaway, Solo
                                        Retreat, etc.</span
                                    >
                                </label>
                                <select
                                    id="reason"
                                    name="reason"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                >
                                    <option value="">Select a reason</option>
                                    <option value="couples-trip"
                                        >Couples Trip</option
                                    >
                                    <option value="family-vacation"
                                        >Family Vacation</option
                                    >
                                    <option value="girls-trip"
                                        >Girls' Trip</option
                                    >
                                    <option value="mommy-getaway"
                                        >Mommy Getaway</option
                                    >
                                    <option value="solo-retreat"
                                        >Solo Retreat</option
                                    >
                                    <option value="business">Business</option>
                                    <option value="adventure">Adventure</option>
                                    <option value="wellness-retreat"
                                        >Wellness Retreat</option
                                    >
                                    <option value="other">Other</option>
                                </select>
                            </div>

                            <!-- Excited Activities -->
                            <div>
                                <label
                                    for="excitedActivities"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    What experiences or activities are you most
                                    excited about?*
                                </label>
                                <textarea
                                    id="excitedActivities"
                                    name="excitedActivities"
                                    placeholder="Tell us about the activities that excite you most..."
                                    required
                                    rows="3"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                ></textarea>
                            </div>

                            <!-- Activities to Avoid -->
                            <div>
                                <label
                                    for="avoidActivities"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Are there any activities or experiences
                                    you'd like to avoid?
                                </label>
                                <textarea
                                    id="avoidActivities"
                                    name="avoidActivities"
                                    placeholder="Optional - let us know what you prefer to avoid..."
                                    rows="2"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                ></textarea>
                            </div>

                            <!-- Open to Suggestions -->
                            <div>
                                <label
                                    for="suggestions"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Are you open to suggestions or
                                    recommendations for your trip?*
                                </label>
                                <select
                                    id="suggestions"
                                    name="suggestions"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                >
                                    <option value="">Select an option</option>
                                    <option value="yes">Yes</option>
                                    <option value="no">No</option>
                                    <option value="maybe">Maybe</option>
                                </select>
                            </div>

                            <!-- Ideal Getaway -->
                            <div>
                                <label
                                    for="idealGetaway"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    In a few sentences, describe your ideal
                                    getaway:*
                                    <span class="text-sm text-gray-500"
                                        >How would you like to feel, recharge,
                                        or connect during your trip?</span
                                    >
                                </label>
                                <textarea
                                    id="idealGetaway"
                                    name="idealGetaway"
                                    placeholder="Describe how you want to feel and what you hope to gain from this trip..."
                                    required
                                    rows="4"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                ></textarea>
                            </div>

                            <!-- Wellness Experiences -->
                            <div>
                                <label
                                    for="wellnessExperiences"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Are there any wellness or self-care
                                    experiences you'd like included?
                                    <span class="text-sm text-gray-500"
                                        >e.g., spa, yoga, meditation, nature
                                        walks, journaling, mindful hikes, etc.</span
                                    >
                                </label>
                                <textarea
                                    id="wellnessExperiences"
                                    name="wellnessExperiences"
                                    placeholder="Optional - tell us about wellness activities that interest you..."
                                    rows="2"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                ></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Dietary & Health Information Section -->
                    <div class="mb-8">
                        <h3
                            class="text-xl font-semibold text-primary/80 mb-4 border-b-2 border-primary pb-2"
                        >
                            Dietary & Health Information
                        </h3>
                        <div class="space-y-6">
                            <!-- Food Allergies -->
                            <div>
                                <label
                                    for="allergies"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Do you have any food allergies or dietary
                                    restrictions we should be aware of?
                                </label>
                                <input
                                    type="text"
                                    id="allergies"
                                    name="allergies"
                                    placeholder="e.g., Peanuts, Gluten, Vegetarian, Vegan, etc."
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                />
                            </div>

                            <!-- Health Considerations -->
                            <div>
                                <label
                                    for="healthConsiderations"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Any health considerations, mobility needs,
                                    or special accommodations?
                                </label>
                                <textarea
                                    id="healthConsiderations"
                                    name="healthConsiderations"
                                    placeholder="Optional - please share any accessibility needs or health considerations..."
                                    rows="3"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-primary"
                                ></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Next Steps Section -->
                    <div class="mb-8 p-4 bg-gray-50 rounded-lg">
                        <h3 class="text-lg font-semibold text-primary/80 mb-2">
                            Next Steps
                        </h3>
                        <p class="text-gray-600">
                            Once you submit your questionnaire, we'll follow up
                            within 24 hours with an email outlining the next
                            steps to curate your personalized itinerary.
                        </p>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-4">
                        <button
                            type="submit"
                            class="w-full bg-primary hover:bg-primary/90 text-white font-semibold py-4 px-8 rounded-lg transition-all hover:scale-105 shadow-lg cursor-pointer"
                        >
                            Submit Your Travel Questionnaire
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <Footer />
</Layout>
