---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

import { Image } from "astro:assets";
export const prerender = false;
const canonical = "https://mapsformom.com/contact/[id]";
---

<Layout canonical={canonical}>
    <Header solid={true} />
    <section
        class="py-20 bg-linear-to-br from-secondary via-secondary/90 to-primary relative overflow-hidden"
    >
        <!-- First -->
        <div class="container mx-auto px-6 relative z-10 mt-16">
            <div class="max-w-6xl mx-auto">
                <header
                    class="relative text-5xl font-bold text-white text-center mb-16"
                >
                    Get your intinerary started
                    <span
                        class="absolute top-12 left-1/2 -translate-x-1/2 w-1/2 h-1 bg-primary"
                    ></span>
                </header>
            </div>

            <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-2xl p-8">
                <form action="/contact/[id]" method="post">
                    <div class="grid md:grid-cols-2 gap-6">
                        <!-- Name -->
                        <div>
                            <label
                                for="name"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Name*
                            </label>
                            <input
                                type="text"
                                placeholder="Your full name"
                                id="name"
                                name="name"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                                required
                            />
                        </div>

                        <!-- Email -->
                        <div>
                            <label
                                for="email"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Email*
                            </label>
                            <input
                                placeholder="example@example.com"
                                type="email"
                                id="email"
                                name="email"
                                required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            />
                        </div>

                        <!-- Travel Dates -->
                        <div>
                            <label
                                for="travelDates"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Travel Dates*
                            </label>
                            <input
                                type="date"
                                id="travelDates"
                                name="travelDates"
                                required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            />
                        </div>

                        <!-- Number of Travelers -->
                        <div>
                            <label
                                for="travelers"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Number of Travelers and Ages*
                            </label>
                            <input
                                type="text"
                                id="travelers"
                                name="travelers"
                                placeholder="e.g., 2 adults, 1 child (5 years)"
                                required
                                min="1"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            />
                        </div>

                        <!-- Primary Destination -->
                        <div>
                            <label
                                for="destination"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                1. What is your primary destination?*
                            </label>
                            <input
                                type="text"
                                id="destination"
                                name="destination"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="e.g., Paris, France"
                                required
                            />
                        </div>

                        <!-- Budget -->
                        <div>
                            <label
                                for="budget"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                2. What is your budget for this trip?*
                            </label>
                            <input
                                type="number"
                                id="budget"
                                name="budget"
                                placeholder="e.g., $2000 - $3000"
                                required
                                min="0"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            />
                        </div>

                        <!-- Accommodation -->
                        <div>
                            <label
                                for="accommodation"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                3. What type of accommodation do you prefer?*
                            </label>
                            <select
                                id="accommodation"
                                name="accommodation"
                                required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                                <option value="">Select an option</option>
                                <option value="hotel">Hotel</option>
                                <option value="resort">Resort</option>
                                <option value="airbnb"
                                    >Airbnb/Vacation Rental</option
                                >
                            </select>
                        </div>

                        <!-- Activities -->
                        <div>
                            <label
                                for="activities"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                4. What activities are you most interested in?
                            </label>
                            <input
                                type="text"
                                id="activities"
                                name="activities"
                                placeholder="Specify activities you're interested in"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            />
                        </div>

                        <!-- Activities to Avoid -->
                        <div>
                            <label
                                for="avoidActivities"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Are there any specific activities you'd like to
                                avoid?
                            </label>
                            <input
                                type="text"
                                id="avoidActivities"
                                name="avoidActivities"
                                placeholder="Optional"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            />
                        </div>

                        <!-- Transportation -->
                        <div>
                            <label
                                for="transportation"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                5. What mode of transportation do you prefer?*
                            </label>
                            <input
                                type="text"
                                id="transportation"
                                name="transportation"
                                placeholder="e.g., Airfare, Car Rental"
                                required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            />
                        </div>

                        <!-- Reason for Travel -->
                        <div>
                            <label
                                for="reason"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                6. Reason for Travel*
                            </label>
                            <select
                                id="reason"
                                name="reason"
                                required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                                <option value="">Select a reason</option>
                                <option value="vacation">Vacation</option>
                                <option value="business">Business</option>
                                <option value="family">Family Visit</option>
                                <option value="adventure">Adventure</option>
                                <option value="Wellness Retreat"
                                    >Wellness Retreat</option
                                >
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <!-- Open to Suggestions -->
                        <div>
                            <label
                                for="suggestions"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                7. Are you open to suggestions or
                                recommendations for your trip?*
                            </label>
                            <select
                                id="suggestions"
                                name="suggestions"
                                required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                                <option value="">Select an option</option>
                                <option value="yes">Yes</option>
                                <option value="no">No</option>
                                <option value="maybe">Maybe</option>
                            </select>
                        </div>

                        <!-- Ideal Trip Vision -->
                        <div>
                            <label
                                for="vision"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                8. In a few sentences, how do you envision your
                                ideal trip?
                            </label>
                            <textarea
                                id="vision"
                                name="vision"
                                placeholder="Describe your ideal trip"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            ></textarea>
                        </div>

                        <!-- Food Allergies -->
                        <div>
                            <label
                                for="allergies"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                9. Do you have any food allergies or dietary
                                restrictions we should be aware of?
                            </label>
                            <input
                                type="text"
                                id="allergies"
                                name="allergies"
                                placeholder="e.g., Peanuts, Gluten"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                            />
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-4 mt-6">
                        <button
                            type="submit"
                            class="w-full bg-primary hover:bg-primary/90 text-white font-semibold py-4 px-8 rounded-lg transition-all hover:scale-105 shadow-lg cursor-pointer"
                        >
                            Submit Your Travel Request
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <Footer />
</Layout>
