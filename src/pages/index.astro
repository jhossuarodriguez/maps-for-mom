---
import AboutBrief from "@/components/AboutBrief.astro";
import ContactSection from "@/components/ContactSection.astro";
import ExperiencesSection from "@/components/ExperiencesSection.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Hero from "@/components/Hero.astro";
import ProcessSection from "@/components/ProcessSection.astro";
import VideoSection from "@/components/VideoSection.astro";
import Layout from "@/layouts/Layout.astro";

export const prerender = true;

const seo = {
	canonical: "https://mapsformom.com/",
	title: "Maps For Mom - Your Dream Trip, Perfectly Planned",
	description: "Maps For Mom curates thoughtful, personalized trips for busy lives. With a special love for wellness and restorative travel, we handle every detail so you can rest, reset, and feel renewed."
};
---

<Layout {...seo}>
	<Header />
	<div class="min-h-screen">
		<main>
			<Hero />
			<AboutBrief />
			<ExperiencesSection />
			<ProcessSection />
			<VideoSection />
			<ContactSection />
		</main>
	</div>
	<Footer />
</Layout>
