---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Layout from "@/layouts/Layout.astro";
import { ArrowLeft, House } from "@lucide/astro";

export const prerender = true;

const seo = {
	canonical: "https://mapsformom.com/",
	title: "Page Not Found - Maps For Mom",
	description: "The page you're looking for doesn't exist. Return to Maps For Mom homepage to continue planning your dream trip.",
	noindex: true
};
---

<Layout {...seo}>
    <Header solid={true} />
    <div class="min-h-screen bg-thirdary flex items-center justify-center px-6">
        <main class="max-w-2xl mx-auto text-center">
            <div class="animate-fade-in">
                <div class="mb-8 mt-14">
                    <h1
                        class="text-9xl md:text-[12rem] font-bold text-primary mb-4 tracking-tight"
                    >
                        404
                    </h1>
                    <h2
                        class="text-3xl md:text-4xl font-bold text-foreground mb-4 opacity-60"
                    >
                        Page Not Found
                    </h2>
                    <p class="text-lg text-foreground/70 mb-8 max-w-md mx-auto">
                        Looks like you've taken a wrong turn on your journey.
                        The page you're looking for doesn't exist or has moved
                        to a new location.
                    </p>
                </div>

                <div class="flex flex-wrap gap-4 justify-center">
                    <a
                        href="/"
                        class="bg-primary hover:bg-primary/90 text-white rounded-full px-8 py-4 flex items-center gap-2 transition-all hover:scale-105 shadow-xl"
                        aria-label="Go back to home"
                    >
                        <House class="w-5 h-5" />
                        Back to Home
                    </a>
                    <a
                        href="/getIntinerary"
                        class="bg-white hover:bg-thirdary text-foreground rounded-full px-8 py-4 flex items-center gap-2 transition-all hover:scale-105 shadow-lg border border-foreground/10"
                        aria-label="Start planning your trip"
                    >
                        <ArrowLeft class="w-5 h-5" />
                        Start Your Journey
                    </a>
                </div>
            </div>
        </main>
    </div>
    <Footer />
</Layout>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.6s ease-out;
    }
</style>
