---
import { ArrowRight, Mail } from "@lucide/astro";
import { Image } from "astro:assets";
import Image1 from "@/assets/CTAImages/Image1.webp";
import Image2 from "@/assets/CTAImages/Image2.webp";
import Image3 from "@/assets/CTAImages/Image3.webp";

const images = [
    { src: Image1, alt: "Travel destination 1" },
    { src: Image2, alt: "Travel destination 2" },
    { src: Image3, alt: "Travel destination 3" },
];
---

<section
    class="py-20 bg-linear-to-br from-primary/20 via-secondary/10 to-primary/20 relative overflow-hidden"
>
    <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-6xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div>
                    <h2 class="mb-6">Ready for Your Next Adventure?</h2>
                    <p class="text-xl text-muted-foreground mb-8">
                        Tell us about your trip! Fill out the questionnaire, and
                        weâ€™ll follow up within 24 hours with an email outlining
                        the next steps to help you plan your perfect getaway.
                    </p>

                    <div class="flex flex-wrap gap-4 mb-8">
                        <a
                            class="bg-primary hover:bg-primary/90 text-white rounded-full px-8 py-4 flex items-center gap-2 transition-all hover:scale-105 shadow-lg cursor-pointer"
                            href="/getIntinerary/getIntinerary"
                        >
                            Get Your Itinerary
                            <ArrowRight class="w-5 h-5" />
                        </a>
                        <a
                            class="bg-white hover:bg-white/90 text-foreground rounded-full px-8 py-4 flex items-center gap-2 transition-all hover:scale-105 shadow-lg cursor-pointer"
                            href="#contact"
                        >
                            <Mail class="w-5 h-5" />
                            Contact Us
                        </a>
                    </div>
                </div>

                <div class="relative">
                    <div class="grid grid-cols-2 gap-4">
                        {
                            images.map((image, index) => (
                                <div
                                    class={`rounded-2xl overflow-hidden shadow-xl ${
                                        index === 0 ? "col-span-2" : ""
                                    } ${index === 1 ? "translate-y-8" : ""}`}
                                >
                                    <Image
                                        src={image.src}
                                        alt={image.alt}
                                        class="w-full h-64 object-cover hover:scale-110 transition-transform duration-500"
                                        loading={"lazy"}
                                    />
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
