---
import { Users, Compass, Mountain, Plane, Heart, Camera } from "@lucide/astro";
const experiences = [
    {
        icon: Compass,
        title: "Tailored Escapes",
        color: "from-primary to-primary/80",
    },
    {
        icon: Heart,
        title: "Relaxation & Wellness",
        color: "from-secondary to-secondary/80",
    },
    {
        icon: Users,
        title: "Family Connection",
        color: "from-primary to-primary/80",
    },
    {
        icon: Mountain,
        title: "Adventure Experiences",
        color: "from-secondary to-secondary/80",
    },
    {
        icon: Plane,
        title: "Convenience & Flexibility",
        color: "from-primary to-primary/80",
    },
    {
        icon: Camera,
        title: "Luxury Spa Escapes",
        color: "from-secondary to-secondary/80",
    },
];
---

<section id="services" class="py-20 bg-muted">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="mb-4">Curated Experiences For Every Traveler</h2>
            <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
                We don't just book hotels and flights. We curate travel
                itineraries with unforgettable experiencesâ€”beaches, hikes, spas,
                girls trips, family adventures, and more
            </p>
        </div>
        <div
            class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 max-w-6xl mx-auto"
        >
            {
                experiences.map((exp) => (
                    <div class="group text-center p-6 bg-white rounded-2xl hover:shadow-2xl transition-all hover:-translate-y-2">
                        <div
                            class={`bg-linear-to-br ${exp.color} w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform`}
                        >
                            <exp.icon class="w-8 h-8 text-white" />
                        </div>
                        <h4 class="text-sm">{exp.title}</h4>
                    </div>
                ))
            }
        </div>
    </div>
</section>
