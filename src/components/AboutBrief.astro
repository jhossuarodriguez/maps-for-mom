---
import { Sparkles, Clock, Heart } from "@lucide/astro";

const features = [
    {
        icon: Sparkles,
        title: "Personalized",
        description:
            "Every itinerary is tailored to your unique interests, budget, and travel style",
    },
    {
        icon: Clock,
        title: "Time-Saving",
        description:
            "We do the research so you can focus on the excitement, not the stress",
    },
    {
        icon: Heart,
        title: "Memorable",
        description:
            "Handpicked experiences that create lasting memories with your loved ones",
    },
];
---

<section class="py-20 bg-white">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="mb-6">Travel Planning, Reimagined</h2>
            <p class="text-xl text-muted-foreground">
                We're <strong>Maps For Mom</strong> â€” travel curators who craft personalized
                itineraries for those short on time but big on wanderlust. Let us
                handle the details while you focus on making memories.
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
            {
                features.map((feature) => (
                    <div class="text-center p-8 rounded-2xl bg-linear-to-br from-primary/5 to-secondary/5 hover:shadow-xl transition-all hover:-translate-y-2 cursor-pointer">
                        <div class="w-16 h-16 bg-primary rounded-2xl flex items-center justify-center mx-auto mb-6 rotate-3 hover:rotate-0 transition-transform">
                            <feature.icon class="w-8 h-8 text-white" />
                        </div>
                        <h3 class="mb-3">{feature.title}</h3>
                        <p class="text-muted-foreground">
                            {feature.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
