---
import { Mail, MapPin, Heart, Phone } from "@lucide/astro";
import WhatsApp from "@/assets/icons/whatsapp.svg";
import Instagram from "@/assets/icons/instagram.svg";
import Youtube from "@/assets/icons/youtube.svg";
import TikTok from "@/assets/icons/tiktok.svg";
---

<footer class="bg-foreground text-white py-12">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div>
                <div class="flex items-center gap-2 mb-4">
                    <img
                        src="/favicon.webp"
                        class="w-6 h-6 text-primary"
                        alt="Maps for Mom Logo"
                        loading="lazy"
                    />
                    <h3 class="text-white">Maps For Mom</h3>
                </div>
                <p class="text-white/70 mb-6">
                    Personalized travel itineraries for busy travelers. Inspired
                    by moms, perfect for everyone.
                </p>
                <div class="flex gap-4">
                    <a
                        href="https://wa.me/18138032579"
                        rel="noopener noreferrer"
                        target="_blank"
                        class="w-10 h-10 bg-white/10 hover:bg-primary rounded-full flex items-center justify-center transition-all hover:scale-110"
                        title="Official WhatsApp of Maps for Mom"
                        aria-label="WhatsApp"
                    >
                        <WhatsApp class="w-5 h-5" />
                    </a>
                    <a
                        href="https://www.instagram.com/mapsformom/"
                        rel="noopener noreferrer"
                        target="_blank"
                        class="w-10 h-10 bg-white/10 hover:bg-primary rounded-full flex items-center justify-center transition-all hover:scale-110"
                        title="Official Instagram of Maps for Mom"
                        aria-label="Instagram"
                    >
                        <Instagram class="w-5 h-5" />
                    </a>
                    <a
                        href="https://www.youtube.com/@mapsformom"
                        rel="noopener noreferrer"
                        target="_blank"
                        class="w-10 h-10 bg-white/10 hover:bg-primary rounded-full flex items-center justify-center transition-all hover:scale-110"
                        title="Official YouTube Account of Maps for Mom"
                        aria-label="YouTube"
                    >
                        <Youtube class="w-5 h-5" />
                    </a>
                    <a
                        href="https://www.tiktok.com/@map.for.mom"
                        rel="noopener noreferrer"
                        target="_blank"
                        class="w-10 h-10 bg-white/10 hover:bg-primary rounded-full flex items-center justify-center transition-all hover:scale-110"
                        title="Official TikTok Account of Maps for Mom"
                        aria-label="TikTok"
                    >
                        <TikTok class="w-5 h-5" />
                    </a>
                </div>
            </div>

            <div>
                <span class="text-white">Quick Links</span>
                <ul class="space-y-3 mt-4">
                    <li>
                        <a
                            href="/#services"
                            class="text-white/70 hover:text-primary transition-colors"
                            >Services</a
                        >
                    </li>
                    <li>
                        <a
                            href="/#process"
                            class="text-white/70 hover:text-primary transition-colors"
                            >How It Works</a
                        >
                    </li>
                    <li>
                        <a
                            href="/#contact"
                            class="text-white/70 hover:text-primary transition-colors"
                            >Contact</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <span class="text-white text-base">Get In Touch</span>
                <ul class="space-y-3 mt-4">
                    <li class="flex items-start gap-3 text-white/70">
                        <MapPin class="w-5 h-5 text-primary shrink-0 mt-0.5" />
                        <span>Orlando, FL, USA</span>
                    </li>
                    <li class="flex items-start gap-3 text-white/70">
                        <Mail class="w-5 h-5 text-primary shrink-0 mt-0.5" />
                        <a
                            href="mailto:hello@mapsformom.com"
                            class="hover:text-primary transition-colors"
                            aria-label="Send email to hello@mapsformom.com"
                        >
                            hello@mapsformom.com
                        </a>
                    </li>
                    <li class="flex items-start gap-3 text-white/70">
                        <Phone class="w-5 h-5 text-primary shrink-0 mt-0.5" />
                        <a
                            href="tel:+12085550112"
                            class="hover:text-primary transition-colors"
                            aria-label="Call Shirley Ramones or Karey Carey at (208) 555-0112"
                        >
                            (208) 555-0112 <br /> Shirley Ramones <br /> Karey Carey
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="border-t border-white/10 pt-8 flex flex-col md:flex-row items-center justify-between gap-4"
        >
            <p class="text-white/50 text-sm">
                &copy; 2025 Maps For Mom. All rights reserved.
            </p>
            <p class="text-white/50 text-sm flex items-center gap-2">
                Made with <Heart class="w-4 h-4 text-primary fill-primary" /> by travel
                enthusiasts
            </p>
        </div>
    </div>
</footer>
